<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Row 1: Nom et Catégorie -->
    <EditText
        android:id="@+id/et_product_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/item_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_product_category"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBaseline_toBaselineOf="@id/et_product_category"/>

    <EditText
        android:id="@+id/et_product_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/item_category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/et_product_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"/>

    <!-- Row 2: Description -->
    <EditText
        android:id="@+id/et_product_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/item_description"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_product_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Row 3: Prix et Quantité -->
    <EditText
        android:id="@+id/et_product_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/item_price"
        android:inputType="numberDecimal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_product_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_product_quantity"
        app:layout_constraintWidth_percent="0.5"/>

    <EditText
        android:id="@+id/et_product_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/item_quantity"
        android:inputType="number"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_product_description"
        app:layout_constraintStart_toEndOf="@id/et_product_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>
